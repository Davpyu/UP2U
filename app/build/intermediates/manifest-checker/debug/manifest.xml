<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.surya.david.up2you"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="28" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.surya.david.up2you.SplashScreenActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.surya.david.up2you.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.surya.david.up2you.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.surya.david.up2you.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.surya.david.up2you.EmailConfirmActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.surya.david.up2you.ConfirmSuccessActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.surya.david.up2you.ForgotPasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.surya.david.up2you.ResetPasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.surya.david.up2you.ResetSuccessActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.surya.david.up2you.HomeActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.surya.david.up2you.Toolbar" />
        <activity
            android:name="com.nguyenhoanglam.imagepicker.ui.imagepicker.ImagePickerActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/imagepicker_ImagePickerTheme" />
        <activity
            android:name="com.nguyenhoanglam.imagepicker.ui.camera.CameraActivty"
            android:screenOrientation="portrait"
            android:theme="@style/imagepicker_CameraTheme" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.surya.david.up2you.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true" >
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/imagepicker_file_paths" />
        </provider>
        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="com.surya.david.up2you.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>