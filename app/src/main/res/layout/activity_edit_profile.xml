<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/edit_profile"
    tools:context=".EditProfileActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/toolbar" />
        <TextView
            android:id="@+id/nm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:text="Nama"
            android:layout_marginStart="30dp"
            android:textSize="20sp"
            android:layout_marginTop="10dp"/>
        <android.support.v7.widget.CardView
            android:id="@+id/cd1"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_below="@id/nm"
            android:layout_marginTop="5dp"
            android:layout_alignStart="@id/nm"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">
            <EditText
                android:id="@+id/nmProfile"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:background="@android:color/transparent"
                android:textSize="15sp"/>
        </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/bi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cd1"
            android:text="Bio"
            android:layout_marginStart="30dp"
            android:textSize="20sp"
            android:layout_marginTop="20dp"/>
        <android.support.v7.widget.CardView
            android:id="@+id/cd2"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_below="@id/bi"
            android:layout_marginTop="5dp"
            android:layout_alignStart="@id/nm"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">
            <EditText
                android:id="@+id/bio"
                android:layout_width="300dp"
                android:gravity="top"
                android:layout_height="100dp"
                android:paddingTop="5dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:background="@android:color/transparent"
                android:textSize="15sp"/>
        </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/ttl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cd2"
            android:text="Tanggal Lahir"
            android:layout_alignStart="@id/nm"
            android:textSize="20sp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/gen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ttl"
            android:layout_alignStart="@id/nm"
            android:text="Gender"
            android:textSize="20sp"
            android:layout_marginTop="20dp"/>

        <RadioGroup
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/nm"
            android:layout_below="@id/gen"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/jk_l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/laki_laki" />

            <RadioButton
                android:id="@+id/jk_p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="65dp"
                android:text="@string/perempuan" />
        </RadioGroup>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="30dp"
            android:src="@drawable/ic_mode_edit_black_24dp" />
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>